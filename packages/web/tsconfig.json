{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@hmemcpy/tutor-config/tsconfig.nextjs.json",
  "compilerOptions": {
    "allowJs": true,
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
