{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["./node_modules/@hmemcpy/tutor-config/biome.base.json"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "rules": {
      "complexity": {
        "useOptionalChain": "error"
      },
      "style": {
        "useForOf": "error"
      },
      "correctness": {
        "noUnusedVariables": "error"
      }
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "files": {
    "ignore": ["node_modules", ".next", "dist", "build", "out", "coverage", "*.lock", "bun.lock"]
  }
}
